<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/allNotesFragment">

    <fragment
        android:id="@+id/allNotesFragment"
        android:name="com.example.noteexample.allNotes.AllNotesFragment"
        android:label="AllNotes"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_noteFragment_to_insertNoteFragment"
            app:destination="@id/insertNoteFragment" />
        <action
            android:id="@+id/action_allNotesFragment_to_oneNoteFragment"
            app:destination="@id/oneNoteFragment" />

    </fragment>
    <fragment
        android:id="@+id/insertNoteFragment"
        android:name="com.example.noteexample.insertNote.InsertNoteFragment"
        android:label="Add"
        tools:layout="@layout/fragment_insert_note">
        <action
            android:id="@+id/action_editNoteFragment_to_noteFragment"
            app:destination="@id/allNotesFragment"
            app:popUpTo="@id/allNotesFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_editNoteFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="com.example.noteexample.updateNote.UpdateNoteFragment"
        android:label="Edit"
        tools:layout="@layout/fragment_update_note">
        <argument
            android:name="noteId"
            app:argType="integer" />
        <action
            android:id="@+id/action_updateNoteFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />
        <action
            android:id="@+id/action_updateNoteFragment_to_allNotesFragment"
            app:destination="@id/allNotesFragment"
            app:popUpTo="@id/allNotesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/oneNoteFragment"
        android:name="com.example.noteexample.oneNote.OneNoteFragment"
        android:label="OneNoteFragment"
        tools:layout="@layout/fragment_one_note">
        <argument
            android:name="noteId"
            app:argType="integer" />
        <action
            android:id="@+id/action_oneNoteFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" />
    </fragment>
    <dialog
        android:id="@+id/galleryFragment"
        android:name="com.example.noteexample.gallery.GalleryFragment"
        android:label="GalleryFragment"
        tools:layout="@layout/fragment_gallery">
        <argument
            android:name="noteId"
            app:argType="integer" />
    </dialog>
</navigation>