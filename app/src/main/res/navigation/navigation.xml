<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/allNotesFragment">

    <fragment
        android:id="@+id/allNotesFragment"
        android:name="com.example.noteexample.allNotes.AllNotesFragment"
        android:label="AllNotes"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_noteFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
        <action
            android:id="@+id/action_noteFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" >
        </action>

    </fragment>
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.noteexample.insertNote.InsertNoteFragment"
        android:label="Add"
        tools:layout="@layout/fragment_insert_note">
        <action
            android:id="@+id/action_editNoteFragment_to_noteFragment"
            app:destination="@id/allNotesFragment"
            app:popUpTo="@id/allNotesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="com.example.noteexample.updateNote.UpdateNoteFragment"
        android:label="Edit"
        tools:layout="@layout/fragment_update_note">
        <action
            android:id="@+id/action_updateNoteFragment_to_noteFragment"
            app:destination="@id/allNotesFragment"
            app:popUpTo="@id/allNotesFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
</navigation>